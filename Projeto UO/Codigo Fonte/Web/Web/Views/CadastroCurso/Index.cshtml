@model Web.ViewModel.CadastroCursoVM

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Cadastro de Curso
        </h1>
    </section>
    <section class="content">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Registros</h3>
                <button type="button" class="button btnBolivia pull-right" onclick="PartialViewCadastrarCurso('@Url.Action("Cadastrar", "CadastroCurso")')">
                    <i class="fa fa-plus">
                    </i>
                </button>
            </div>
            <div class="box-body">
                <table id="tab_cadastro_curso" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Sigla</th>
                            <th>Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var curso in Model.Cursos) {
                            <tr>
                                <td>@Html.DisplayFor(model => curso.Descricao)</td>
                                <td>@Html.DisplayFor(model => curso.Sigla)</td>
                                <td class="acionar">
                                    <center>
                                        <button type="button" class="btn btn-social-icon btn-primary" onclick="PopupFormEditarCurso('@Url.Action("EditarCurso", "CadastroCurso", curso)')"><i class="fa fa-edit"></i></button>
                                        <button type="button" class="btn btn-social-icon btn-warning" onclick="PopupFormExcluirCurso('@Url.Action("ExcluirCurso", "CadastroCurso", curso)')"><i class="fa fa-trash"></i></button>
                                    </center>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Nome</th>
                            <th>Sigla</th>
                            <td>Ação</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
        <div id="cadastro" />
    </section>
</div>
