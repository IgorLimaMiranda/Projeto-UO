@model Web.ViewModel.CadastroCursoVM
@using (Html.BeginForm("Excluir", "CadastroCurso", FormMethod.Post)) {
    @Html.AntiForgeryToken()
    <div class="box-body">
        <div class="box-header with-border">
            @Html.HiddenFor(model => model.Curso.Id)
            <h3 class="box-title">Desejar Excluir o curso <label>@Html.DisplayTextFor(model => model.Curso.Descricao)</label>?</h3>
        </div>
        <div class="box-footer">
            <div class="text-center">
                <button type="submit" class="btn bg-orange btn margin"><i class="fa fa-check"></i> Excluir</button>
                <button type="button" class="btn bg-navy btn margin" onclick="CancelarWindowsForms()"><i class="fa fa-close"></i> Cancelar</button>                
            </div>
        </div>
    </div>
}