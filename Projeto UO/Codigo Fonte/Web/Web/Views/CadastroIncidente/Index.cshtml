@model Web.ViewModel.CadastroIncidenteVM

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Cadastro de Incidente
        </h1>
    </section>
    <section class="content">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Registros</h3>
                <button type="button" class="button btnBolivia pull-right" onclick="PartialViewCadastrarIncidente('@Url.Action("Cadastrar", "CadastroIncidente")')">
                    <i class="fa fa-plus">
                    </i>
                </button>
            </div>
            <div class="box-body">
                <table id="tab_cadastro_recurso" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Descrição</th>
                            <th>Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var incidente in Model.IncidenteRecorrentes) {
                            <tr>
                                <td>@Html.DisplayFor(model => incidente.Descricao)</td>
                                <td>
                                    <center>
                                        <button type="button" class="btn btn-social-icon btn-primary" onclick="PopupFormEditarIncidente('@Url.Action("EditarIncidente", "CadastroIncidente",incidente)')"><i class="fa fa-edit"></i></button>
                                        <button type="button" class="btn btn-social-icon btn-warning" onclick="PopupFormExcluirIncidente('@Url.Action("ExcluirIncidente", "CadastroIncidente",incidente)')"><i class="fa fa-trash"></i></button>
                                    </center>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Descrição</th>
                            <th>Ação</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
        <div id="cadastro" />
    </section>
</div>