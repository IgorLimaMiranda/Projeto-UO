@model Web.ViewModel.CadastroSetorVM
<section class="content">
    <div class="row">
        <div class="box box-default">
            <div class="box-header">
                <h3 class="box-title">Editar</h3>
            </div>
            @using (Html.BeginForm("Editar", "CadastroSetor", FormMethod.Post)) {
                @Html.AntiForgeryToken()
                <div class="box-body">
                    <div class="form-group">
                        <label>Nome do Setor</label>
                        <div class="input-group">
                            @Html.HiddenFor(model => model.Setor.Id)
                            <span class="input-group-addon"><i class="fa fa-map-marker"></i></span>
                            @Html.EditorFor(model => model.Setor.Nome, new {
                                htmlAttributes = new {
                                    @id = "nome_setor",
                                    @class = "form-control",
                                    @required = "required"
                                }
                            })
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Andar></label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-map-marker"></i></span>
                            @Html.DropDownListFor(andares => Model.Setor.Andar, Model.ListarAndarSetor(), "...", htmlAttributes: new {
                                @id = "combo_box_andar_setor",
                                @class = "form-control",
                                @required = "required"
                            })
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <div class="text-center">
                        <button type="button" class="btn bg-navy btn margin pull-right" onclick="LimparPartialView()"><i class="fa fa-close"></i> Cancelar</button>
                        <button type="submit" class="btn bg-orange btn margin pull-right"><i class="fa fa-check"></i> Salvar</button>
                    </div>
                </div>
            }
        </div>
    </div>
</section>