@model Web.ViewModel.CadastroSetorVM

@using (Html.BeginForm("Excluir", "CadastroSetor", FormMethod.Post)) {
    @Html.AntiForgeryToken()
    <div class="box-body">
        <div class="box-header with-border">
            @Html.HiddenFor(model => model.Setor.Id)
            <h3 class="box-title">Desejar Excluir o setor <label>@Html.DisplayTextFor(model => model.Setor.Nome)</label>?</h3>
        </div>
        <div class="box-footer">
            <div class="text-center">
                <button type="submit" class="btn bg-orange btn margin"><i class="fa fa-check"></i> Excluir</button>
                <button type="button" class="btn bg-navy btn margin" onclick="CancelarWindowsForms()"><i class="fa fa-close"></i> Cancelar</button>
            </div>
        </div>
    </div>
}