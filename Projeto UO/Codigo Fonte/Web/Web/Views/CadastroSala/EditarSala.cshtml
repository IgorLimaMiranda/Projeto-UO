@model Web.ViewModel.CadastroSalaVM
<div class="box box-default">
    <div class="box-header">
        <h3 class="box-title">Editar</h3>
    </div>
    <div class="box-body">
        @using (Html.BeginForm("Editar", "CadastroSala", FormMethod.Post)) {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Número</label>
                        <div id="nome_numero" class="input-group">
                            <span class="input-group-addon"><i class="fa fa-key"></i></span>
                            @Html.HiddenFor(model => model.Sala.Id)
                            @Html.HiddenFor(model => model.Sala.Nome)
                            @Html.EditorFor(model => model.Sala.Numero, new {
                                htmlAttributes = new {
                                    @id = "sala_numero",
                                    @type = "number",
                                    @class = "form-control",
                                    @min = "1",
                                    @placeholder = "...",
                                    @oninput = "this.value = Math.abs(this.value)",
                                    @maxlength = "7",
                                    @minlength = "1",
                                    @Required = "required"
                                }
                            })
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Andar</label>
                        @Html.DropDownListFor(
                            salas => Model.Sala.Andar, Model.ListarAndarSetor(), "...", htmlAttributes: new {
                                @id = "combo_box_cursos",
                                @class = "form-control",
                                @Required = "required"
                        })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Capacidade</label>
                        <div id="nome_capacidade" class="input-group">
                            <span class="input-group-addon"><i class="fa fa-key"></i></span>
                            @Html.EditorFor(model => model.Sala.Capacidade, new {
                                htmlAttributes = new {
                                    @type = "number",
                                    @class = "form-control",
                                    @min = "1",
                                    @oninput = "this.value = Math.abs(this.value)",
                                    @placeholder = "...",
                                    @maxlength = "7",
                                    @minlength = "1",
                                    @Required = "required"
                                }
                            })
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <label>Tipo de Sala</label>
                    @Html.DropDownListFor(
                        salas => Model.Sala.Tipo, Model.ListarTipoSala(), "...", htmlAttributes: new {
                            @id = "combo_box_cursos",
                            @class = "form-control",
                            @Required = "required"
                    })
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Descrição</label>
                        <div id="nome_descricao" class="input-group">
                            <span class="input-group-addon"><i class="fa fa-key"></i></span>
                            @Html.DropDownListFor(
                                 usuarios => Model.Sala.Descricao, Model.ListarDescricaoSala(), "...", htmlAttributes: new {
                                     @id = "combo_box_tipo_usuario",
                                     @class = "form-control",
                                     @Required = "required"
                            })
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <button type="button" class="btn bg-navy btn margin pull-right" onclick="LimparPartialView()"><i class="fa fa-close"></i> Cancelar</button>
                <button type="submit" class="btn bg-orange btn margin pull-right"><i class="fa fa-check"></i> Salvar</button>
            </div>
        }
    </div>
</div>