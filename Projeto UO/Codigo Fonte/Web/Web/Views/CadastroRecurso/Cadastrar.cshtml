@model Web.ViewModel.CadastroRecursoVM 
 <div class="box box-default">
     <div class="box-header">
         <h3 class="box-title">Cadastrar</h3>
     </div>
    <div class="box-body">
        @using (Html.BeginForm("Cadastrar", "CadastroRecurso", FormMethod.Post)) {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Descrição do Recurso</label>
                        @Html.TextAreaFor(model => model.Equipamento.Descricao, new {
                       @id = "descricao_recurso",
                       @placeholder = "Descrição do Recurso ...",
                       @class = "form-control",
                       @maxlength = "250",
                       @rows = "3",
                       @Required = "required"
                   })
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <button type="button" class="btn bg-navy btn margin pull-right" onclick="LimparPartialView()"><i class="fa fa-close"></i> Cancelar</button>
                <button type="submit" class="btn bg-orange btn margin pull-right"><i class="fa fa-check"></i> Salvar</button>
            </div>
        }
    </div>
</div>

