@model Web.ViewModel.CadastroTurmaVM
@{

}
<br />
<div class="box box-default">
    <div class="box-header">
        <h3 class="box-title">Cadastrar</h3>
    </div>
    @using (Html.BeginForm("Cadastrar", "CadastroTurma", FormMethod.Post)) {
        @Html.AntiForgeryToken()
        <div class="box-body">
            <div class="form-group">
                <label>Código da Turma</label>
                <div id="nome_turma" class="input-group">
                    <span class="input-group-addon"><i class="fa fa-list-alt"></i></span>
                    @Html.EditorFor(model => model.Turma.Id, new {
                        htmlAttributes = new {
                            @id = "turma_id",
                            @type = "number",
                            @class = "form-control",
                            @placeholder = "...",
                            @oninput = "this.value = Math.abs(this.value)",
                            @min = "1",
                            @maxlength = "7",
                            @minlength = "1",
                            @Required = "required"
                        }
                    })
                </div>
            </div>
            <div class="form-group">
                <label>Ano da Turma</label>
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-calendar"></i>
                    </div>
                    @Html.HiddenFor(model => model.Turma.Ano)
                    @Html.EditorFor(model => model.Turma.Ano, new {
                        htmlAttributes = new {
                            @id = "turma_ano",
                            @type = "number",
                            @class = "form-control datepicker",
                            @placeholder = "...",
                            @oninput = "this.value = Math.abs(this.value)",
                            @min = "1900",
                            @max = "2100",
                            @maxlength = "4",
                            @minlength = "4",
                            @Required = "required"
                        }
                    })
                </div>
            </div>
            <div class="form-group">
                <label>Curso</label>
                <div id="nome_curso" class="input-group">
                    <span class="input-group-addon"><i class="fa fa-group"></i></span>
                    @Html.DropDownListFor(
                     usuarios => Model.Turma.IdCurso, Model.ListarCursos(), "...", htmlAttributes: new {
                         @id = "combo_box_cursos",
                         @class = "form-control",
                         @Required = "required"
                     })
                </div>
            </div>
        </div>
        <div class="box-body">
            <div class="box-footer">
                <button type="submit" class="btn bg-navy btn margin pull-right " onclick="LimparPartialView()"><i class="fa fa-close"></i> Cancelar</button>
                <button type="submit" class="btn bg-orange btn margin pull-right"><i class="fa fa-check"></i> Salvar</button>
            </div>
        </div>
    }
</div>
