@model Web.ViewModel.CadastroTurmaVM
@using (Html.BeginForm("Excluir", "CadastroTurma", FormMethod.Post)) {
    @Html.AntiForgeryToken()
    <div class="box-body">
        <div class="box-header with-border">
            @Html.HiddenFor(model => model.Turma.Ano)
            @Html.HiddenFor(model => model.Turma.Id)
            <h3 class="box-title">Desejar excluir a turma <label>@Html.DisplayTextFor(model => model.Turma.Id) / @Html.DisplayTextFor(model => model.Turma.Ano) - @Html.DisplayTextFor(model => model.Turma.Curso.Descricao)</label>?</h3>
        </div>
        <div class="box-footer">
            <div class="text-center">
                <button type="submit" class="btn bg-orange btn margin"><i class="fa fa-check"></i> Excluir</button>
                <button type="button" class="btn bg-navy btn margin" onclick="CancelarWindowsForms()"><i class="fa fa-close"></i> Cancelar</button>
            </div>
        </div>
    </div>
}