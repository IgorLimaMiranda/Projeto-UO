<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Sistema UO</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="shortcut icon" type="image/x-icon" href="~/Arquivos/images/logo/senac-80x80.png">
    <link rel="stylesheet" href="~/Arquivos/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Arquivos/bower_components/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Arquivos/bower_components/Ionicons/css/ionicons.min.css">
    <link rel="stylesheet" href="~/Arquivos/bower_components/jvectormap/jquery-jvectormap.css">
    <link rel="stylesheet" href="~/Arquivos/dist/css/AdminLTE.min.css">
    <link rel="stylesheet" href="~/Arquivos/dist/css/skins/_all-skins.min.css">
    <link rel="stylesheet" href="~/Arquivos/Ultilitario.css">
    <link rel="stylesheet" href="~/Arquivos/bower_components/bootstrap-daterangepicker/daterangepicker.css">
    <link rel="stylesheet" href="~/Arquivos/bower_components/select2/dist/css/select2.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    <link rel="stylesheet" type="text/css" href="~/Arquivos/bower_components/tabela-sistema/css/dataTables.bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/Arquivos/bower_components/tabela-sistema/css/buttons.bootstrap.min.css">
    <link rel="stylesheet" href="~/Arquivos/jquery-ui.min.css">
    <link rel="stylesheet" href="~/Arquivos/Login/app-assets/css/plugins/ui/jqueryui.css">
    <link rel="stylesheet" type="text/css" href="~/Arquivos/mensagemAlerta/toastr.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script type="text/javascript" language="javascript" src="~/Arquivos/bower_components/tabela-sistema/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" language="javascript" src="~/Arquivos/bower_components/tabela-sistema/js/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript" language="javascript" src="~/Arquivos/bower_components/tabela-sistema/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" language="javascript" src="~/Arquivos/bower_components/tabela-sistema/js/buttons.bootstrap.min.js"></script>
    <script type="text/javascript" language="javascript" src="~/Arquivos/bower_components/tabela-sistema/js/jszip.min.js"></script>
    <script type="text/javascript" language="javascript" src="~/Arquivos/bower_components/tabela-sistema/js/pdfmake.min.js"></script>
    <script type="text/javascript" language="javascript" src="~/Arquivos/bower_components/tabela-sistema/js/vfs_fonts.js"></script>
    <script type="text/javascript" language="javascript" src="~/Arquivos/bower_components/tabela-sistema/js/buttons.html5.min.js"></script>
    <script type="text/javascript" language="javascript" src="~/Arquivos/bower_components/tabela-sistema/js/buttons.print.min.js"></script>
    <script src="~/Arquivos/mensagemAlerta/toastr.min.js"></script>
</head>
<body class="hold-transition skin-laranja-senac sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <a href="@*@Html.DisplayFor(model => model.MenuHome)*@" class="logo">
                <span class="logo-lg"><img src="~/Arquivos/images/logo/senaclogo.png" alt="Senac Logo"></span>
            </a>
            <nav class="navbar navbar-static-top">
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button" id="menu-ativar">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="@Model.UsuarioLogado.ImagemUsuario" class="user-image" alt="User">
                                @*<span class="hidden-xs">@Html.DisplayFor(model => model.UsuarioLogado.Nome)</span>*@
                            </a>
                            <ul class="dropdown-menu">
                                <li class="user-header">
                                    <img src="@*@Model.UsuarioLogado.ImagemUsuario*@" class="img-circle" alt="User">
                                    <p>
                                        Senac Horto - @*@Html.DisplayFor(model => model.UsuarioLogado.TipoUsuario)*@
                                        <small>Sistema UO</small>
                                    </p>
                                </li>
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href="@Url.Action("Index", "EditarPerfil")" class="btn btn-default btn-flat">Perfil</a>
                                    </div>
                                    <div class="pull-right">
                                        <a onclick="PopupFormSair('@Url.Action("Sair", "Login")')" class="btn btn-default btn-flat">Sair</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <aside class="main-sidebar">
            <section class="sidebar">
                <ul class="sidebar-menu" data-widget="tree">
                    <li class="header">MENU PRINCIPAL</li>
                    <li style="@*@Html.DisplayFor(model => model.MenuEnsalamento)*@"><a href="@*@Html.DisplayFor(model => model.MenuHome)*@"><i class="fa fa-home"></i> <span>Página Inicial</span></a></li>
                    <li style="@*@Html.DisplayFor(model => model.MenuCadastro)*@" class="treeview">
                        <a href="#">
                            <i class="fa fa-list-alt"></i> <span>Cadastro</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="@Url.Action("Index", "CadastroCurso")">Curso</a></li>
                            <li><a href="@Url.Action("Index", "CadastroIncidente")">Incidente</a></li>
                            <li><a href="@Url.Action("Index", "CadastroTurma")">Turma</a></li>
                            <li><a href="@Url.Action("Index", "CadastroRecurso")">Recurso</a></li>
                            <li><a href="@Url.Action("Index", "CadastroUsuario")">Usuário</a></li>

                            <li class="treeview">
                                <a href="#">
                                    Local
                                    <span class="pull-right-container">
                                        <i class="fa fa-angle-left pull-right"></i>
                                    </span>
                                </a>
                                <ul class="treeview-menu">
                                    <li><a href="@Url.Action("Index", "CadastroSala")">Sala</a></li>
                                    <li><a href="@Url.Action("Index", "CadastroSetor")">Setor</a></li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                    <li style=" @*@Html.DisplayFor(model => model.MenuEnsalamento)*@" class="treeview">
                        <a href="#">
                            <i class=" fa fa-building-o"></i> <span>Ensalamento</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a style="@*@Html.DisplayFor(model => model.MenuEnsalamento)*@" href="@Url.Action("Index", "Ensalamento")">@*@Html.DisplayFor(model => model.MenuAcao)*@</a>
                            <li><a style="@*@Html.DisplayFor(model => model.MenuCadastro)*@" href="@Url.Action("Index", "HistoricoEnsalamento")">Histórico</a></li>
                        </ul>
                    </li>
                    <li style=" @*@Html.DisplayFor(model => model.MenuOcorrencia)*@" class="treeview">
                        <a href="#">
                            <i class="fa fa-warning"></i> <span>Ocorrência</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            @*<li><a href="@Url.Action("Index", "Ocorrencia")">@Html.DisplayFor(model => model.MenuAcao)</a></li>*@
                        </ul>
                    </li>
                    <li><a class="btngg" onclick="PopupFormSair('@Url.Action("Sair", "Login")')"><i class="fa fa-sign-out "></i> <span>Sair</span></a></li>
                </ul>
            </section>
        </aside>

        @RenderBody()
        <script type="text/javascript">
            @{
                var mensagem = TempData["Mensagem"] ?? string.Empty;
                var tipo = TempData["Tipo"] ?? string.Empty;
                var titulo = TempData["Titulo"] ?? string.Empty;
            }
            if ('@mensagem') {
                toastr.@tipo ('@mensagem','@titulo', {
                    "progressBar": true,
                    "closeButton": true,
                    "showMethod": "slideDown",
                    "hideMethod": "slideUp",
                    "timeOut": 5000
                });
            }
        </script>

        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Versão</b> @Configuration.VersaoWeb
            </div>
            <strong>Copyright &copy; 2017-2018 <a href="http://www.ms.senac.br/" target="_blank">Senac</a>.</strong> Todos Direitos reservados.
        </footer>
        <div class="control-sidebar-bg"></div>
    </div>
    <script src="~/Arquivos/Ultilitario.js"></script>
    <script src="~/Arquivos/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/Arquivos/bower_components/fastclick/lib/fastclick.js"></script>
    <script src="~/Arquivos/dist/js/adminlte.min.js"></script>
    <script src="~/Arquivos/bower_components/jquery-sparkline/dist/jquery.sparkline.min.js"></script>
    <script src="~/Arquivos/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js"></script>
    <script src="~/Arquivos/plugins/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
    <script src="~/Arquivos/bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/Arquivos/bower_components/Chart.js/Chart.js"></script>
    <script src="~/Arquivos/dist/js/demo.js"></script>
    <script src="~/Arquivos/bower_components/moment/min/moment.min.js"></script>
    <script src="~/Arquivos/bower_components/bootstrap-daterangepicker/daterangepicker.js"></script>
    <script src="~/Arquivos/bower_components/bootstrap-daterangepicker/pt-br.js"></script>
    <script src="~/Arquivos/plugins/input-mask/jquery.inputmask.js"></script>
    <script src="~/Arquivos/plugins/input-mask/jquery.inputmask.date.extensions.js"></script>
    <script src="~/Arquivos/plugins/input-mask/jquery.inputmask.extensions.js"></script>
    <script src="~/Arquivos/bower_components/select2/dist/js/select2.full.min.js"></script>
    <script src="~/Arquivos/WindowsDialog.js"></script>
</body>
</html>